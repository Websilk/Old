{
  "title": "Websilk CMS Platform",
  "version": "0.1.2-alpha",
  "authors": [ "Mark Entingh" ],
  "description": "Websilk is a powerful drag & drop web development CMS platform built for Windows, Linux, & Mac OSX",
  "projectUrl": "http://www.github.com/Websilk/Home",

  "webroot": "wwwroot",

  "commands": {
    "kestrel": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.Kestrel --server.urls http://localhost:5000"
  },

  "frameworks": {
    "dnxcore50": {
      "dependencies": {
        "Microsoft.AspNet.Server.Kestrel": "1.0.0-beta7",
        "Microsoft.AspNet.Hosting": "1.0.0-beta7",
        "Microsoft.AspNet.Server.WebListener": "1.0.0-beta7",
        "Microsoft.AspNet.StaticFiles": "1.0.0-beta7",
        "Microsoft.AspNet.Diagnostics": "1.0.0-beta7",
        "Microsoft.AspNet.Session": "1.0.0-beta7",
        "Microsoft.CSharp": "4.0.1-beta-23225",
        "Microsoft.Framework.Configuration": "1.0.0-beta7",
        "Microsoft.Framework.OptionsModel": "1.0.0-beta7",
        "Microsoft.Framework.Caching.Memory" :  "1.0.0-beta7",
        "System.Console": "4.0.0-beta-23019",
        "System.Runtime": "4.0.21-beta-23225",
        "System.Runtime.Extensions": "4.0.11-beta-23225",
        "System.Collections": "4.0.11-beta-23225",
        "System.ComponentModel": "4.0.1-beta-23225",
        "System.Linq": "4.0.1-beta-23225",
        "System.IO": "4.0.11-beta-23225",
        "System.Data.Common": "4.0.1-beta-23225",
        "System.Data.SqlClient": "4.0.0-beta-23123",
        "System.Diagnostics.Tools":  "4.0.1-beta-23225",
        "System.Reflection.Extensions": "4.0.1-beta-23225",
        "System.Threading": "4.0.11-beta-23225",
        "System.Text.RegularExpressions": "4.0.11-beta-23225",
        "System.Text.Encoding": "4.0.11-beta-23225",
        "System.Text.Encoding.CodePages": "4.0.1-beta-23225",
        "System.Threading.Tasks": "4.0.11-beta-23225",
        "System.Xml.ReaderWriter": "4.0.11-beta-23225",
        "System.Xml.XmlDocument": "4.0.1-beta-23225",
        "System.Xml.XmlSerializer": "4.0.11-beta-23225",
        "System.Xml.XPath.XmlDocument": "4.0.1-beta-23225",
        "System.Runtime.Serialization.Xml": "4.0.11-beta-23225",
        "System.Runtime.InteropServices": "4.0.21-beta-23225",
        "System.Resources.ResourceManager": "4.0.1-beta-23225",
        "System.Security.Cryptography.Encryption": "4.0.0-beta-23123",
        "System.Security.Cryptography.RandomNumberGenerator": "4.0.0-beta-23123",
        "Newtonsoft.Json": "7.0.1",
        "Nine.Imaging": "1.1.0-alpha"

      }
    }
  },


  "compile": [
    "*.cs",
    "App/**/*.cs",
    "Components/**/*.cs",
    "Pipeline/**/*.cs",
    "Services/**/*.cs",
    "Utility/**/*.cs"
  ],

  "compileExclude": [
    "wwwroot",
    "Sql"
  ],

  "publishExclude": [
    "node_modules",
    "bower_components",
    "**.xproj",
    "**.user",
    "**.vspscc"
  ],

  "exclude": [
    "wwwroot",
    "node_modules",
    "bower_components"
  ]
}
